{
  "name": "mydocs",
  "version": "0.1.0",
  "description": "Documentation search CLI using SQLite FTS5 full-text search with Porter stemming and BM25 ranking",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mydocs": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hoshinotsuyoshi/mydocs.git"
  },
  "keywords": [
    "documentation",
    "markdown",
    "search",
    "fts5",
    "sqlite",
    "cli"
  ],
  "author": "hoshinotsuyoshi",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "better-sqlite3": "12.4.1",
    "commander": "14.0.2",
    "fast-glob": "3.3.3",
    "gray-matter": "4.0.3",
    "neverthrow": "8.2.0",
    "smol-toml": "1.4.2",
    "toml": "3.0.0",
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "22.18.13",
    "@vitest/ui": "4.0.6",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
